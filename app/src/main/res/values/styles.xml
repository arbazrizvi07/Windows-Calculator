<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/bg_history</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="StyleSymbols" parent="android:Widget.TextView">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">20sp</item>
        <item name="android:padding">14dp</item>
        <item name="android:hapticFeedbackEnabled">true</item>
    </style>

    <style name="StyleButtons" parent="android:Widget.TextView">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">30sp</item>
        <item name="android:padding">8dp</item>
        <item name="android:hapticFeedbackEnabled">true</item>
    </style>

    <style name="StyleMemoryButton" parent="android:Widget.TextView">
        <item name="android:gravity">center</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">5dp</item>
        <item name="android:hapticFeedbackEnabled">true</item>
    </style>

    <style name="NavigationTheme" parent="AppTheme">
        <item name="android:background">@color/bg_keyboard</item>
    </style>
</resources>
